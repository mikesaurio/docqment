<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Mis tableros</h1>
        </div>
        <div class="col-md-6">
            <%=link_to "Nuevo tablero", new_board_path(), class: "btn btn-primary float-rigth"%>
        </div>
    </div>
   
    
    <% @boards.each_with_index do |board, idx| %>
        <%if idx%3 == 0%>  
            <div class="row margin-top">
                <%[idx, idx+1, idx+2].each do |n| %>
                    <%unless @boards[n].blank?%>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                
                                    <h5 class="card-title"><%=@boards[n].title%></h5>
                                    <p class="card-text"><%=@boards[n].description%></p>
                                    <%=link_to "Ver completo", board_path(@boards[n].id), class: "btn btn-primary"%>
                                </div>
                            </div>
                        </div>
                    <%end%>
                 <%end%>
            </div>
        <%end%>
    <% end %>
</div>
